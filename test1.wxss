page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.profile-info{
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0 30.25rpx;
    background: #333;
}

.profile-info .avatar{
    height: 148rpx;
    width: 148rpx;
    border-radius: 50%;
}

.profile-info .info{
    flex: 1;
    height: 85rpx;
    padding-left: 31.25rpx;
}

.profile-info .name{
    display: block;
    height: 45rpx;
    line-height: 45rpx;
    color: #fff;
    font-size: 37.5rpx;
    margin-bottom: 10rpx;
}

.profile-info .level{
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 10rpx;
    color: #7f7f7f;
    font-size: 30rpx;
}

.img-plus-style {  
  height: 120rpx;  
  width: 120rpx;  
  position: fixed;  
  bottom: 250rpx;  
  right: 30rpx;  
  z-index: 100;
  text-align: center;
  border-radius:50%;
}

.img-plus-style-text{    
  position: fixed;  
  bottom: 230rpx;  
  right: 72rpx;  
  z-index: 100;
  text-align: center;
  font-size: 20rpx;
}
.img-style {  
  height: 80rpx;  
  width: 80rpx;  
  position: fixed;  
  bottom: 250rpx;  
  right: 30rpx;  
  opacity: 0;
  font-size: 20rpx;
  text-align: center;  
}
.img-style button{
  opacity: 0;
}
.img-style-text{    
  position: fixed;  
  bottom: 225rpx;  
  right: 40rpx;  
  z-index: 100;
  text-align: center;
  font-size: 20rpx;
  opacity: 0;
}

.groupings{
    height: auto;
    width: 100%;
    overflow: hidden;
}

.grouping{
    margin-top: 20rpx;
    background: #fff;
}

.grouping .h{
    height: 83.3rpx;
    line-height: 83.3rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    bgrouping-bottom: 1px solid #f4f4f4;
    font-size: 30rpx;
    color: #333;
}

.grouping .h .l{
    float: left;
}

.grouping .h .r{
    float: right;
    color: #b4282d;
    font-size: 24rpx;
}

.grouping .goods{
    display: flex;
    align-items: center;
    height: 199rpx;
    margin-left: 31.25rpx;
}

.grouping .goods .img{
    height:145.83rpx;
    width:145.83rpx;
    background: #f4f4f4;
}

.grouping .goods .img image{
    height:145.83rpx;
    width:145.83rpx;
}

.grouping .goods .info{
    height: 145.83rpx;
    flex: 1;
    padding-left: 20rpx;
}

.grouping .goods .name{
    margin-top: 30rpx;
    display: block;
    height: 44rpx;
    line-height: 44rpx;
    color: #333;
    font-size: 30rpx;
}

.grouping .goods .number{
    display: block;
    height: 37rpx;
    line-height: 37rpx;
    color: #666;
    font-size: 25rpx;
}

.grouping .goods .status{
    width:105rpx;
    color: #b4282d;
    font-size: 25rpx;
}

.grouping .b{
    height: 103rpx;
    line-height: 103rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    bgrouping-top: 1px solid #f4f4f4;
    font-size: 30rpx;
    color: #333;
}

.grouping .b .l{
    float: left;
}

.grouping .b .r{
    float: right;
}

.grouping .b .btn{
    margin-top: 19rpx;
    height: 64.5rpx;
    line-height: 64.5rpx;
    text-align: center;
    padding: 0 20rpx;
    bgrouping-radius: 5rpx;
    font-size: 28rpx;
    color: #fff;
    background: #b4282d;
}